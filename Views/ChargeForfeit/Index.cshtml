@{
	Layout = null;
}

<div id="ChargeForfeit" class="infoBlock">
	<div class="row">
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12">
					<h3>Начисление пени</h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-right">	
					<button class="btn btn-primary btn-sm" onclick="ChargeForfeit.Charge.AddCharge();">Добавить проводку</button>
					@Html.ActionLink("Экспорт в Excel", "ButtonExportChargeClick", new { }, new { @class = "btn btn-primary btn-sm" })
				</div>
			</div>
			<div id="ChargeGridPlace" class="row"></div>
			<script type="text/javascript">
				ChargeForfeit.Charge.CreateGrid();
			</script>
		</div>
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12">
					<h3>Перечисление штрафа</h3>
				</div>				
			</div>
			<div class="row">
				<div class="col-md-12 text-right">
					<button class="btn btn-primary btn-sm" onclick="ChargeForfeit.Transfer.AddTransfer();">Добавить проводку</button>
					@Html.ActionLink("Экспорт в Excel", "ButtonExportTransferClick", new { }, new { @class = "btn btn-primary btn-sm" })
				</div>
			</div>
			<div id="TransferGridPlace" class="row"></div>
			<script type="text/javascript">
				ChargeForfeit.Transfer.CreateGrid();
			</script>
		</div>
	</div>
</div>